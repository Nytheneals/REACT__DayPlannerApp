    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "react-router": "^4.2.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  },
  "dependencies": {
    "create-react-class": "^15.6.2",
    "css-loader": "^0.28.9",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "style-loader": "^0.19.1"
  }
