{
  "name": "react-todoapp",
  "version": "1.0.0",
  "description": "A Simple React todo app ",
  "main": "index.js",
  "repository": "https://github.com/Nytheneals/REACT__TodoApp.git",
  "scripts": {
    "start": "npm run build",
    "build":
      "webpack -d && webpack-dev-server --content-base src/ --inline --hot --port 8090 --history-api-fallback",
